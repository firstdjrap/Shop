@{
    ViewData["Title"] = "Регистрация";
}

<h2>Регистрация</h2>

<div class="form-horizontal">
    <h4>Клиент</h4>
    <hr />

    <div class="form-group">
        <div class="col-md-10">
            <input class="form-control" type="text" id="firstName" placeholder="Имя" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <input class="form-control" type="text" id="lastName" placeholder="Фамилия" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <input class="form-control" type="tel" id="phoneNumber" placeholder="Номер телефона" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <input class="form-control" type="password" id="password" placeholder="Пароль" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <input class="form-control" type="text" id="address" placeholder="Адрес" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input class="btn btn-default" type="submit" onclick="Register()" value="Зарегистрировать" />
        </div>
    </div>
</div>

<script>
    function Register() {
        postContext("Account", "SignUp", JSON.stringify({
            FirstName: firstName.value,
            LastName: lastName.value,
            PhoneNumber: parseInt(phoneNumber.value),
            Password: password.value,
            Address: address.value
        }))
            .then(response => response.json())
            .then(function (commits) {
                if (commits == "Success") {
                    alert(firstName.value + ", добро пожаловать!");
                    window.location.href = "/";
                }
                else {
                    alert(commits);
                    firstName.value = "";
                    lastName.value = "";
                    phoneNumber.value = "";
                    password.value = "";
                }
            });
    }
</script>