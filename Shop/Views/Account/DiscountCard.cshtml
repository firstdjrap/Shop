@{
    ViewData["Title"] = "Добавление дисконтной карты";
}

<h2>Добавление</h2>

<div class="form-horizontal">
    <h4>Дисконтная карта</h4>
    <hr />

    <div class="form-group">
        <div class="col-md-10">
            <input class="form-control" type="text" id="number" placeholder="Номер" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input class="btn btn-default" type="submit" onclick="Add()" value="Добавить" />
        </div>
    </div>
</div>

<script>
    for (var i in ['input', 'change', 'blur', 'keyup']) {
        number.addEventListener('input', formatCardCode, false);
    }

    function formatCardCode() {
        var cardCode = this.value.replace(/[^\d]/g, '').substring(0,16);
        cardCode = cardCode != '' ? cardCode.match(/.{1,4}/g).join(' ') : '';
        this.value = cardCode;
    }

    function Add() {
        postContext("Account", "AddDiscountCard", JSON.stringify(number.value))
            .then(response => response.json())
            .then(function (commit) {
                if (commit == "Success") {
                    alert("Добавлено!");
                    window.location.href = "/";
                }
                else {
                    alert(commit);
                }
            });
    }
</script>