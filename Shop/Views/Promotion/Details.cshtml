@model Shop.Domain.Core.Promotion

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Details</h2>

<div>
    <h4>Promotion</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.HiddenFor(model => model.Id)
        </dt>
        <dt>
            @Html.DisplayNameFor(model => model.Percent)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Percent)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.LifeTime)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.LifeTime)
        </dd>
        <dt>
            @Html.HiddenFor(model => model.CreatedAt)
        </dt>
    </dl>
</div>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Products.First().Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Products.First().Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Products.First().Price)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Products)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
            </td>
        </tr>
    }
    </tbody>
</table>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>