@model Shop.Domain.Core.Promotion

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Movie</h4>
        <hr/>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Id" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Id" class="form-control" readonly="readonly"/>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Percent" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Percent" class="form-control"/>
                <span asp-validation-for="Percent" class="text-danger"></span>
            </div>
        </div>
        <input type="hidden" asp-for="CreatedAt"/>
        <div class="form-group">
            <label asp-for="LifeTime" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="LifeTime" class="form-control"/>
                <span asp-validation-for="LifeTime" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default"/>
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}