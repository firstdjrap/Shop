@{
    ViewData["Title"] = "Добавление офиса";
}

<h2>Добавление</h2>

<div class="form-horizontal">
    <h4>Офис</h4>
    <hr />

    <div class="form-group">
        <div class="col-md-10">
            <input class="form-control" type="text" id="nameBranchOffice" placeholder="Название" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <input class="form-control" type="text" id="address" placeholder="Адрес" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <input class="form-control" type="text" id="phoneNumber" placeholder="Номер телефона" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input class="btn btn-default" type="submit" onclick="Create()" value="Добавить" />
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Вернутся к списку</a>
</div>

<script>
    function postContext(controller, action, body) {
        return fetch("/" + controller + "/" + action, {
            method: "Post",
            headers: {
                "Content-Type": "application/json"
            },
            body: body
        });
    }

    function Create() {
        postContext("BranchOffice", "Create", JSON.stringify({
            Name: nameBranchOffice.value,
            Address: address.value,
            PhoneNumber: parseInt(phoneNumber.value, 10)
        }))
            .then(response => response.json())
            .then(function (commit) {
                if (commit == "Success") {
                    alert("Добавлено!");
                    nameBranchOffice.value = "";
                    phoneNumber.value = "";
                }
                else {
                    alert(commit);
                }
            });
    }
</script>