@{
    ViewData["Title"] = "Добавление товара";
}

<h2>Добавление</h2>

<div class="form-horizontal">
    <h4>Товар</h4>
    <hr />

    <div class="form-group">
        <div class="col-md-10">
            <input class="form-control" type="text" id="nameProduct" placeholder="Название" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <input class="form-control" type="text" id="price" placeholder="Цена" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input class="btn btn-default" type="submit" onclick="Create()" value="Добавить" />
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Вернутся к списку</a>
</div>

<script>
    function postContext(controller, action, body) {
        return fetch("/" + controller + "/" + action, {
            method: "Post",
            headers: {
                "Content-Type": "application/json"
            },
            body: body
        });
    }

    function Create() {
        postContext("Product", "Create", JSON.stringify({
            Name: nameProduct.value,
            Price: parseInt(price.value)
        }))
            .then(response => response.json())
            .then(function (commit) {
                if (commit == "Success") {
                    alert("Добавлено!");
                    nameProduct.value = "";
                    price.value = "";
                }
                else {
                    alert(commit);
                }
            });
    }
</script>