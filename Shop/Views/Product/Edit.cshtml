@model Shop.Domain.Core.Product

@{
    ViewData["Title"] = "Редактирование товара";
}

<h2>Редактирование</h2>

<div class="form-horizontal">
    <h4>Товар</h4>
    <hr />

    <div class="form-group">
        <div class="col-md-10">
            <input class="form-control" type="text" id="nameProduct" placeholder="Название" value="@Model.Name" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <input class="form-control" type="text" id="price" placeholder="Цена" value="@Model.Price" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input class="btn btn-default" type="submit" onclick="Edit()" value="Сохранить" />
            <input class="btn btn-default" type="submit" onclick="Cancel()" value="Отменить" />
        </div>
    </div>
</div>

<script>
    function postContext(controller, action, body) {
        return fetch("/" + controller + "/" + action, {
            method: "Post",
            headers: {
                "Content-Type": "application/json"
            },
            body: body
        });
    }

    function Edit() {
        postContext("Product", "Edit", JSON.stringify({
            Id: @Model.Id,
            Name: nameProduct.value,
            Price: parseInt(price.value, 10)
        }))
            .then(response => response.json())
            .then(function (commit) {
                if (commit == "Success") {
                    alert("Изменено!");
                    window.location.href = "/product";
                }
                else {
                    alert(commit);
                }
            });
    }

    function Cancel() {
        window.location.href = "/product";
    }
</script>